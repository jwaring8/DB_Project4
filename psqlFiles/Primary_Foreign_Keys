

-- Add primary keys
ALTER TABLE STUDENT ADD PRIMARY KEY (id);    
ALTER TABLE PROFESSOR ADD PRIMARY KEY (id);    
ALTER TABLE COURSE ADD PRIMARY KEY (crsCode);
ALTER TABLE TEACHING ADD PRIMARY KEY (crsCode, semester);    
ALTER TABLE TRANSCRIPT ADD PRIMARY KEY (studId, crsCode, semester);

-- Add foreign keys
ALTER TABLE TRANSCRIPT ADD FOREIGN KEY (studId) REFERENCES STUDENT (id);
ALTER TABLE TRANSCRIPT ADD FOREIGN KEY (crsCode) REFERENCES COURSE (crsCode);
ALTER TABLE TEACHING ADD FOREIGN KEY (profId) REFERENCES PROFESSOR (id);
ALTER TABLE TEACHING ADD FOREIGN KEY (crsCode) REFERENCES COURSE (crsCode);